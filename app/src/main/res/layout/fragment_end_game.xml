<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/liner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="4">

    <com.game.kolas.mygame.views.CustomFontTextView
        android:id="@+id/timetext"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/m_dimens"
        android:layout_weight="1"
        android:textSize="23sp" />

    <com.game.kolas.mygame.views.CustomFontTextView
        android:id="@+id/besttime"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/m_dimens"
        android:layout_weight="1"
        android:textSize="30sp" />


    <com.game.kolas.mygame.views.CustomFontButton
        android:id="@+id/newgameE"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/m_dimens"
        android:layout_weight="1"
        android:background="@drawable/butt_selt"
        android:text="@string/repeat_game" />

    <com.game.kolas.mygame.views.CustomFontButton
        android:id="@+id/mainmenuE"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/m_dimens"
        android:layout_weight="1"
        android:background="@drawable/butt_selt"
        android:text="@string/menu_text" />
</LinearLayout>
